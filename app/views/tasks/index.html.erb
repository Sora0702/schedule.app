<h3>予定一覧</h3>
<p><%= link_to "予定の新規追加", :new_task %></p>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>参照</th>
      <th>更新</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_day.strftime("%Y/%m/%d") %></td>
        <td><%= task.finish_day.strftime("%Y/%m/%d") %></td>
        <td>
          <% if task.all_day == "1" %>
            ○
          <% end %>
        </td>
        <td><%= task.updated_at.strftime("%Y/%m/%d %H") %></td>
        <td><%= link_to "参照", task %></td>
        <td><%= link_to "編集", [:edit, task] %></td>
        <td><%= link_to "削除", task, method: :delete, data: { confirm:"本当に削除しますか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= "予定合計#{@tasks.length}件" %></p>
<p><%= "本日の日付 #{Time.now.strftime("%Y/%m/%d")}" %></p>