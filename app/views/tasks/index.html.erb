<h3>予定一覧</h3>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <%= @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.start_day %></td>
        <td><%= task.finish_day %></td>
        <td><%= task.all_day %></td>
        <td><%= task.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>